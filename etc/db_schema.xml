<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="bighippo_store_locator" resource="default" engine="innodb" comment="Store Locator">
        <column xsi:type="int" name="id" padding="10" unsigned="false" nullable="false" identity="true" comment="Row ID"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Name"/>
        <column xsi:type="varchar" name="street" nullable="false" length="255" comment="Street Address"/>
        <column xsi:type="varchar" name="city" nullable="false" length="255" comment="City"/>
        <column xsi:type="varchar" name="region" nullable="false" length="255" comment="State - Province"/>
        <column xsi:type="varchar" name="postcode" nullable="false" length="255" comment="Postcode"/>
        <column xsi:type="varchar" name="country" nullable="false" length="255" comment="Country"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
